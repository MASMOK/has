$IPTABLES -A INPUT -p tcp --dport 137:139 -j DROP
$IPTABLES -A INPUT -p udp --dport 137:139 -j DROP

$IPTABLES -A INPUT -i $WAN_INTERFACE -s 0.0.0.0/8 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 10.0.0.0/8 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 127.0.0.0/8 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 169.254.0.0/16 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 172.16.0.0/12 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 192.0.2.0/24 -j DROP
#$IPTABLES -A INPUT -i $WAN_INTERFACE -s 192.168.0.0/16 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 224.0.0.0/4 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 240.0.0.0/5 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 248.0.0.0/5 -j DROP
$IPTABLES -A INPUT -i $WAN_INTERFACE -s 255.255.255.255/32 -j DROP

$IPTABLES -A FORWARD -p tcp --dport 135 -j DROP
$IPTABLES -A FORWARD -p udp --dport 135 -j DROP
$IPTABLES -A FORWARD -p tcp --dport 137:139 -j DROP
$IPTABLES -A FORWARD -p udp --dport 137:139 -j DROP
$IPTABLES -A FORWARD -p tcp --dport 445 -j DROP
$IPTABLES -A FORWARD -p udp --dport 445 -j DROP

$IPTABLES -A OUTPUT -o $WAN_INTERFACE -p tcp --dport 135 -j DROP
$IPTABLES -A OUTPUT -o $WAN_INTERFACE -p udp --dport 135 -j DROP
$IPTABLES -A OUTPUT -o $WAN_INTERFACE -p tcp --dport 137:139 -j DROP
$IPTABLES -A OUTPUT -o $WAN_INTERFACE -p udp --dport 137:139 -j DROP
$IPTABLES -A OUTPUT -o $WAN_INTERFACE -p tcp --dport 445 -j DROP
$IPTABLES -A OUTPUT -o $WAN_INTERFACE -p udp --dport 445 -j DROP
$IPTABLES -A OUTPUT -o $WAN_INTERFACE -d 10.0.0.0/8 -j DROP
$IPTABLES -A OUTPUT -o $WAN_INTERFACE -d 172.16.0.0/12 -j DROP
#$IPTABLES -A OUTPUT -o $WAN_INTERFACE -d 192.168.0.0/16 -j DROP
$IPTABLES -A OUTPUT -o $WAN_INTERFACE -d 127.0.0.0/8 -j DROP
